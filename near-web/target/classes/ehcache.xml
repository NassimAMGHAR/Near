<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="CM1"
         updateCheck="false"
         maxBytesLocalHeap="16M">

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            eternal="false"
            overflowToDisk="false"
    />

    <cache name="com.near.friendly.core.model.user.User"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.near.friendly.core.model.user.Authority"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.near.friendly.core.model.user.User.authorities"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.near.friendly.core.model.user.UserSession"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.near.friendly.core.model.user.User.userSessions"
           timeToLiveSeconds="3600">
    </cache>

</ehcache>
